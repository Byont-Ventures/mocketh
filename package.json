{
  "name": "@byont/mocketh",
  "version": "1.2.0",
  "description": "A fully-typed ethers.js mocking library for mocking smart contracts",
  "main": "dist/mocketh.cjs.js",
  "module": "dist/mocketh.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    "module": "./dist/mocketh.esm.js",
    "default": "./dist/mocketh.cjs.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "dev": "rollup -w --config rollup.config.ts --configPlugin typescript",
    "lint": "eslint --fix --max-warnings=0",
    "format": "prettier . --write --ignore-path .gitignore",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "/dist"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "homepage": "https://mocketh.byont.io/",
  "author": "jasperverbeet",
  "repository": "Byont-Ventures/mocketh",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@wagmi/core": "^0.7.1",
    "abitype": "^0.1.7",
    "babel-jest": "^29.2.2",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.2",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.4.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-jest": "^3.1.0",
    "rollup-watch": "^4.3.1",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  }
}
